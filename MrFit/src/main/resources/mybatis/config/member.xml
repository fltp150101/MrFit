<?xml version="1.0" encoding="UTF-8"?>
<!-- Sql Mapper -->
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">
 	<sql id="selectall">
 		select id,password,name,phone,address,email,gno,point,totalspent,status from member
 	</sql>
	
 	<!-- <select id="findMemberById" parameterType="string" resultType="memberVO">
 		select id,password,name,phone,address,email,gno,point,totalspent,status from member where id=#{value} and status='1'
 	</select> -->
 	
 	<select id="findMemberById" parameterType="string" resultType="memberVO">
 		<include refid="selectall"/>
 		where id=#{value} and status='1'
 	</select>
 	
 	<select id="selectAuthorityById" parameterType="string" resultType="authority">
 		SELECT	id,auth 
		FROM	auth 
		WHERE	id=#{value}
 	</select>
</mapper>










